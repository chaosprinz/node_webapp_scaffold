{
  "pug": {
    "in": "src/templates",
    "out": "src/js/template.js"
  },
  "stylus": {
    "in": "src/stylesheets/index.styl",
    "out": "app/public/css/main.css",
    "libs": ["nib","jeet","rupture"],
    "mixin_paths": ["src/stylesheets"]
  },
  "browserify": {
    "in": "src/js",
    "out": "app/public/js",
    "libdir": "lib",
    "lint_ignore": ["runtime.js$"]
  },
  "nodejs": {
    "libs": "lib",
    "entry": "index.js",
    "app": "app"
  }
}
